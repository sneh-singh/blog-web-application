<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog</title>
  <link rel="stylesheet" href="/styles/main.css">
</head>

<body>
  <div class="container">
    <h1>My Blog</h1>
    <a id="newPostBtn" href="/new">Create New Joke</a>
    <ul id="postsList">
      <% jokes.forEach(joke=> { %>
        <li>
          <h2>
            <%=joke.jokeType%>
          </h2>
          <small>
            <%=joke.date %>
          </small>
          <p>
            <%=joke.jokeText%>
          </p>
          <small>By: <%=joke.author%> </small>
          <a class="edit" href="/edit/<%= joke.id %>">Edit</a>
          <a class="delete" href="/api/jokes/delete/<%= joke.id %>">Delete</a>
        </li>
        <% }); %>
    </ul>
  </div>

</body>

</html>